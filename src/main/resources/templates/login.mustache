    button {
        border: none;
        background-color: #2C3E50;
        opacity: .65;
        color: #fff;
        border-radius: 0.25em;
    }
    button:after {
        position: absolute;
        content: "";
        width: 0;
        height: 100%;
        top: 0;
        left: 0;
        direction: rtl;
        z-index: -1;
        box-shadow:
                -7px -7px 20px 0px #fff9,
                -4px -4px 5px 0px #fff9,
                7px 7px 20px 0px #0002,
                4px 4px 5px 0px #0001;
        transition: all 0.3s ease;
    }
    input#email{
        width: 340px;
        height: 50px;
        border: 0;
        border-radius: 5px;
        outline: none;
        padding-left: 10px;
        background-color: rgb(233, 233, 233);
        margin-top: 5px;
    }
    input#pw{
        width: 340px;
        height: 50px;
        border: 0;
        border-radius: 5px;
        outline: none;
        padding-left: 10px;
        background-color: rgb(233, 233, 233);
        margin-top: 5px;
